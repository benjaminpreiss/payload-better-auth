#!/bin/sh

# Lint the codebase (with Nx caching)
echo "Running lint..."
if ! pnpm run lint; then
  echo ""
  echo "Hint: Try running 'pnpm run lint:fix:all' to auto-fix issues"
  exit 1
fi

# Type check (with Nx caching)
echo "Running type check..."
pnpm run typecheck || exit 1

# Run tests
echo "Running tests..."
pnpm run test || exit 1

echo "All checks passed!"


